@model ProductManagement.UI.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ProductViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-controller="Products" asp-action="Upload"  method="post">
                <div class="form-group">
                    <label asp-for="File" class="control-label"></label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="File" asp-for="File">
                        <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="File"></label>
                        <label style="display: none" id="file_nome"></label>
                    </div>
                    <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#File").change(function (){
            $("#file_nome").text(this.files[0].name);
            $("#file_nome")[0].style.display = 'block';
            });
        
        $("#File").attr("data-val", "true");
        $("#File").attr("data-val-required", "Preencha o Campo");
    </script>
}
